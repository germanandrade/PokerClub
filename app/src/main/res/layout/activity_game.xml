<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Game.Views.GameActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_user_list"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/buyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:enabled="false"
        android:onClick="buyEndavans"
        android:text="@string/buy_endavans"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:weightSum="100">

        <EditText
            android:id="@+id/depositEndavans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:hint="Endavans to deposit"
            android:inputType="number"
            android:padding="@dimen/padding_functions"
            android:textSize="16sp" />

        <Button
            android:id="@+id/depositButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:enabled="false"
            android:onClick="depositEndavans"
            android:padding="@dimen/padding_functions"
            android:text="@string/deposit_endavans"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">


        <EditText
            android:id="@+id/withdrawEndavans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:hint="@string/endavans_to_withdraw"
            android:inputType="number"
            android:padding="@dimen/padding_functions"
            android:textSize="16sp" />

        <Button
            android:id="@+id/withdrawButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:enabled="false"
            android:onClick="withdrawEndavans"
            android:padding="@dimen/padding_functions"
            android:text="@string/withdraw_endavans"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/payDebtButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:enabled="false"
        android:onClick="payDebt"
        android:text="@string/pay_debt"
        android:textSize="16sp" />


</LinearLayout>